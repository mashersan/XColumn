<Window x:Class="XColumn.ChromeImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Chromeから拡張機能をインポート" Height="450" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="PC内のChromeブラウザから検出された拡張機能一覧です。&#x0a;インポートしたい項目にチェックを入れてください。" 
                   Margin="0,0,0,10" TextWrapping="Wrap"/>

        <DataGrid Grid.Row="1" x:Name="ExtensionsGrid" AutoGenerateColumns="False" 
                  CanUserAddRows="False" HeadersVisibility="Column" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{Binding IsEnabled}" Header="選択" Width="50"/>
                <DataGridTextColumn Binding="{Binding Name}" Header="拡張機能名" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Id}" Header="ID" Width="120" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="ImportButton" Content="選択した項目をインポート" Click="ImportButton_Click" Style="{StaticResource AccentButtonStyle}" Margin="0,0,10,0"/>
            <Button Content="キャンセル" Click="CancelButton_Click"/>
        </StackPanel>

        <ProgressBar x:Name="LoadingBar" Grid.Row="1" IsIndeterminate="True" 
                     VerticalAlignment="Center" HorizontalAlignment="Stretch" Width="200" Visibility="Collapsed"/>
    </Grid>
</Window>