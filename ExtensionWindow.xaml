<Window x:Class="XColumn.ExtensionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XColumn"
        mc:Ignorable="d"
        Title="拡張機能管理" Height="350" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="WebView2で使用するChrome拡張機能を管理します。&#x0a;※解凍された拡張機能フォルダ(manifest.jsonがある場所)を指定してください。" 
                   TextWrapping="Wrap" Margin="0,0,0,10" Foreground="#555"/>

        <ListBox Name="ExtensionsListBox" Grid.Row="1" Margin="0,0,0,10" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox IsChecked="{Binding IsEnabled}" VerticalAlignment="Center" Margin="0,0,10,0" ToolTip="有効/無効 (再起動後に反映)"/>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Path}" FontSize="10" Foreground="Gray" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button Content="フォルダから追加..." Click="AddExtension_Click" Padding="10,5" Margin="0,0,10,0"/>
            <Button Content="削除" Click="RemoveExtension_Click" Padding="10,5"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="※変更を適用するにはアプリの再起動が必要です" VerticalAlignment="Center" Foreground="Red" Margin="0,0,10,0" FontSize="11"/>
            <Button Content="閉じる" IsCancel="True" Padding="15,5" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>