<Window x:Class="XColumn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XColumn"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:dd="urn:gong-wpf-dragdrop" 
        mc:Ignorable="d"
        x:Name="MainWin"
        Title="XColumn v1.14.2" Height="800" Width="1200"
        Loaded="Window_Loaded"
        WindowStartupLocation="Manual"
        PreviewMouseWheel="Window_PreviewMouseWheel">
    <Window.Resources>
        <local:ColumnDropHandler x:Key="ColumnDropHandler" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0" Margin="5" Background="#F0F0F0">

            <Button Content="＋ カラム追加" Margin="5,5,0,5" Padding="10,5" Click="OpenMenu_Click" ToolTip="新しいカラムを追加します">
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="ホーム" Click="AddHome_Click"/>
                        <MenuItem Header="通知" Click="AddNotify_Click"/>
                        <MenuItem Header="トレンド" Click="AddTrend_Click"/>
                        <MenuItem Header="検索..." Click="AddSearch_Click"/>
                        <MenuItem Header="リスト..." Click="AddList_Click"/>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>

            <Button Content="設定・拡張 ▾" Margin="5,5,0,5" Padding="10,5" Click="OpenMenu_Click">
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="拡張機能の管理..." Click="ManageExtensions_Click"/>
                        <Separator/>
                        <MenuItem Header="設定..." Click="OpenSettings_Click"/>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>

            <Separator Margin="10,5" BorderBrush="#CCC" BorderThickness="1" Opacity="0.5"/>

            <CheckBox Content="アクティブ時自動更新停止" 
                      IsChecked="{Binding StopTimerWhenActive, ElementName=MainWin}"
                      VerticalAlignment="Center" Margin="5,5,10,5"
                      ToolTip="アプリ操作中は自動更新タイマーを一時停止します"/>

            <Separator Margin="0,5,10,5" BorderBrush="#CCC" BorderThickness="1" Opacity="0.5"/>

            <TextBlock Text="プロファイル:" VerticalAlignment="Center" Margin="5,5,5,5" Foreground="#333"/>
            <ComboBox Name="ProfileComboBox" 
                      MinWidth="120" 
                      VerticalContentAlignment="Center"
                      Margin="0,5,5,5"
                      DisplayMemberPath="DisplayName"
                      SelectionChanged="ProfileComboBox_SelectionChanged"/>

            <Button Content="切り替え" Click="SwitchProfile_Click" Margin="0,5,2,5" Padding="8,5" Background="#E0F0FF" FontWeight="Bold" ToolTip="このウィンドウを選択したプロファイルに切り替えます（再起動）"/>

            <Button Content="管理 ▼" Margin="0,5,5,5" Padding="8,5" Click="OpenMenu_Click" ToolTip="プロファイル操作メニュー">
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="別窓で起動" Click="LaunchNewWindow_Click"/>
                        <Separator/>
                        <MenuItem Header="新規作成..." Click="AddProfile_Click"/>
                        <MenuItem Header="名前変更..." Click="RenameProfile_Click"/>
                        <Separator/>
                        <MenuItem Header="削除" Click="DeleteProfile_Click" Foreground="Red"/>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>

            <Separator Margin="10,5" BorderBrush="#CCC" BorderThickness="1" Opacity="0.5"/>

            <TextBlock Text="音量:" VerticalAlignment="Center" Margin="5,5,5,5" Foreground="#333"/>
            <Slider Name="VolumeSlider" Width="100" Minimum="0" Maximum="100" Value="50" 
                    VerticalAlignment="Center" Margin="0,5,5,5" 
                    TickFrequency="10" IsSnapToTickEnabled="True"
                    ToolTip="アプリ内の動画音量を一括調整します (0-100)"
                    ValueChanged="VolumeSlider_ValueChanged"/>

            <Separator Margin="10,5" BorderBrush="#CCC" BorderThickness="1" Opacity="0.5"/>

            <StackPanel Name="StatusPanel" Orientation="Horizontal" VerticalAlignment="Center" 
                        Margin="5,5,5,5" Background="Transparent" Cursor="Hand"
                        MouseLeftButtonUp="StatusPanel_MouseLeftButtonUp"
                        MouseRightButtonUp="StatusPanel_MouseRightButtonUp" 
                        ToolTip="Xサーバーの状態">
                <Ellipse Name="StatusIndicator" Width="12" Height="12" Fill="Gray" Stroke="#999" StrokeThickness="1" Margin="0,1,5,0"/>
                <TextBlock Name="StatusText" Text="待機中" FontSize="11" VerticalAlignment="Center" Foreground="#555"/>
            </StackPanel>
        </WrapPanel>

        <Grid Grid.Row="1">
            <ItemsControl Grid.Row="1" Name="ColumnItemsControl"
                          dd:DragDrop.IsDragSource="True"
                          dd:DragDrop.IsDropTarget="True"
                          dd:DragDrop.UseDefaultDragAdorner="True"
                          dd:DragDrop.DropHandler="{StaticResource ColumnDropHandler}"
                          dd:DragDrop.DropTargetAdornerBrush="#1DA1F2">
                <ItemsControl.Style>
                    <Style TargetType="ItemsControl">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ItemsControl">
                                    <local:ExtendedScrollViewer x:Name="MainScrollViewer" 
                                                  Focusable="False"
                                                  HorizontalScrollBarVisibility="Auto" 
                                                  VerticalScrollBarVisibility="Disabled" 
                                                  PanningMode="HorizontalOnly">
                                        <ItemsPresenter />
                                    </local:ExtendedScrollViewer>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="ItemsPanel">
                            <Setter.Value>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding UseUniformGrid, ElementName=MainWin}" Value="True">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ItemsControl">
                                            <ItemsPresenter />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="ItemsPanel">
                                    <Setter.Value>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Rows="1"/>
                                        </ItemsPanelTemplate>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ItemsControl.Style>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1,0,1,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Width" Value="{Binding ColumnWidth, ElementName=MainWin}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding UseUniformGrid, ElementName=MainWin}" Value="True">
                                            <Setter Property="Width" Value="NaN"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <Grid.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="このカラムを削除" Click="DeleteColumn_Click" Tag="{Binding}"/>
                                    </ContextMenu>
                                </Grid.ContextMenu>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Name="DragHandle" Background="#F0F0F0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" MinHeight="24"/>
                                        <RowDefinition Height="Auto" MinHeight="32"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="{Binding Url}" 
                                               VerticalAlignment="Center" HorizontalAlignment="Left" 
                                               Margin="10,4,5,2" 
                                               FontSize="12" FontWeight="Bold" Foreground="#555" 
                                               TextTrimming="CharacterEllipsis" 
                                               ToolTip="{Binding Url}"/>

                                    <Grid Grid.Row="1" Margin="0,0,0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0" Content="←" Width="30" Height="24" Margin="5,0,0,0" 
                                                ToolTip="戻る" Click="ColumnGoBack_Click" Tag="{Binding}"/>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,5,0">
                                            <CheckBox IsChecked="{Binding IsRetweetHidden}" Content="RT非表示" 
                                                      ToolTip="リポストや他人の反応を非表示にします" 
                                                      VerticalAlignment="Center" Margin="0,0,5,0"
                                                      Click="RetweetHidden_Click" Tag="{Binding}"/>
                                            <CheckBox IsChecked="{Binding IsReplyHidden}" Content="Rep非表示" 
                                                      ToolTip="リプライ(返信)非表示" 
                                                      VerticalAlignment="Center" Margin="0,0,5,0"
                                                      Click="ReplyHidden_Click" Tag="{Binding}"/>
                                            <Button Content="↻" Width="24" Height="24" Margin="2,0" ToolTip="更新" Click="ColumnManualRefresh_Click" Tag="{Binding}"/>
                                            <TextBlock Text="{Binding CountdownText, Mode=OneWay}" VerticalAlignment="Center" Margin="5,0,2,0" MinWidth="40" TextAlignment="Center" FontStyle="Italic" Foreground="#333"/>
                                            <CheckBox IsChecked="{Binding IsAutoRefreshEnabled}" ToolTip="自動更新" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                            <TextBlock Text="自動:" VerticalAlignment="Center" Margin="3,0"/>
                                            <TextBox Text="{Binding RefreshIntervalSeconds, UpdateSourceTrigger=PropertyChanged}" Width="40" Height="24" VerticalContentAlignment="Center" ToolTip="秒数" Margin="2,0"/>
                                            <Button Content="✖" Width="24" Height="24" Margin="5,0,0,0" FontWeight="Bold" Background="#CC000000" Foreground="White" BorderThickness="0" Click="DeleteColumn_Click" Tag="{Binding}"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>

                                <wv2:WebView2 Grid.Row="1" Loaded="WebView_Loaded" dd:DragDrop.DragSourceIgnore="True"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Grid Name="FocusViewGrid" Visibility="Collapsed" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Name="CloseFocusViewButton" Click="CloseFocusView_Click" Content="← カラム一覧に戻る" HorizontalAlignment="Left" Margin="10" Padding="10,5" FontWeight="Bold"/>
                <wv2:WebView2 Grid.Row="1" Name="FocusWebView" />
            </Grid>
        </Grid>
    </Grid>
</Window>