<Window x:Class="TweetDesk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TweetDesk"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:dd="urn:gong-wpf-dragdrop" 
        mc:Ignorable="d"
        Title="TweetDesk" Height="800" Width="1200"
        Loaded="Window_Loaded"
        WindowStartupLocation="Manual">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0" Margin="5" Background="#F0F0F0">
            <Button Content="ホーム追加" Click="AddHome_Click" Margin="5,5,0,5" Padding="10,5"/>
            <Button Content="通知追加" Click="AddNotify_Click" Margin="5,5,0,5" Padding="10,5"/>
            <Button Content="検索追加" Click="AddSearch_Click" Margin="5,5,0,5" Padding="10,5"/>
            <Button Content="リスト追加" Click="AddList_Click" Margin="5,5,0,5" Padding="10,5"/>
        </WrapPanel>

        <Grid Grid.Row="1">

            <ItemsControl Grid.Row="1" Name="ColumnItemsControl"
                          dd:DragDrop.IsDragSource="True"
                          dd:DragDrop.IsDropTarget="True"
                          dd:DragDrop.UseDefaultDragAdorner="True"
                          dd:DragDrop.DropHandler="{Binding}">

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="1"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1,0,1,0">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Name="DragHandle" Background="#F0F0F0" Height="32">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Url}" 
                                               Grid.Column="0" 
                                               VerticalAlignment="Center" 
                                               Margin="10,0" 
                                               FontSize="12" 
                                               FontWeight="Bold" 
                                               Foreground="#555" 
                                               TextTrimming="CharacterEllipsis"/>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,5,0">

                                        <Button Content="↻" Width="24" Height="24" Margin="2,0" ToolTip="このカラムを更新" Click="ColumnManualRefresh_Click" Tag="{Binding}"/>

                                        <TextBlock Text="{Binding CountdownText, Mode=OneWay}" VerticalAlignment="Center" Margin="5,0,2,0" MinWidth="40" TextAlignment="Center" FontStyle="Italic" Foreground="#333"/>

                                        <CheckBox IsChecked="{Binding IsAutoRefreshEnabled}" ToolTip="自動更新を有効にする" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                        <TextBlock Text="自動:" VerticalAlignment="Center" Margin="3,0"/>

                                        <TextBox Text="{Binding RefreshIntervalSeconds, UpdateSourceTrigger=PropertyChanged}" Width="40" Height="24" VerticalContentAlignment="Center" ToolTip="更新間隔 (秒)" Margin="2,0"/>

                                        <Button Content="✖" Width="24" Height="24" Margin="5,0,0,0" FontWeight="Bold" Background="#CC000000" Foreground="White" BorderThickness="0" Click="DeleteColumn_Click" Tag="{Binding}"/>
                                    </StackPanel>
                                </Grid>

                                <wv2:WebView2 Grid.Row="1" Loaded="WebView_Loaded" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Grid Name="FocusViewGrid" Visibility="Collapsed" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0" Name="CloseFocusViewButton" 
                        Click="CloseFocusView_Click"
                        Content="← カラム一覧に戻る"
                        HorizontalAlignment="Left"
                        Margin="10"
                        Padding="10,5"
                        FontWeight="Bold"/>

                <wv2:WebView2 Grid.Row="1" Name="FocusWebView" />
            </Grid>

        </Grid>

    </Grid>
</Window>