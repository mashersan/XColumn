<Window x:Class="XColumn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XColumn"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:dd="urn:gong-wpf-dragdrop" 
        mc:Ignorable="d"
        x:Name="MainWin"
        Title="XColumn v1.4.1" Height="800" Width="1200"
        Loaded="Window_Loaded"
        WindowStartupLocation="Manual">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0" Margin="5" Background="#F0F0F0">
            <Button Content="ホーム追加" Click="AddHome_Click" Margin="5,5,0,5" Padding="10,5"/>
            <Button Content="通知追加" Click="AddNotify_Click" Margin="5,5,0,5" Padding="10,5"/>
            <Button Content="検索追加" Click="AddSearch_Click" Margin="5,5,0,5" Padding="10,5"/>
            <Button Content="リスト追加" Click="AddList_Click" Margin="5,5,0,5" Padding="10,5"/>

            <Separator Margin="10,5" BorderBrush="#CCC" BorderThickness="1" Opacity="0.5"/>

            <CheckBox Content="アクティブ時停止" 
                      IsChecked="{Binding StopTimerWhenActive, ElementName=MainWin}"
                      VerticalAlignment="Center" Margin="5,5,10,5"
                      ToolTip="アプリ操作中は自動更新タイマーを一時停止します"/>

            <Separator Margin="0,5,10,5" BorderBrush="#CCC" BorderThickness="1" Opacity="0.5"/>

            <TextBlock Text="プロファイル:" VerticalAlignment="Center" Margin="5,5,5,5" Foreground="#333"/>
            <ComboBox Name="ProfileComboBox" 
                      MinWidth="120" 
                      VerticalContentAlignment="Center"
                      Margin="0,5,5,5"
                      DisplayMemberPath="DisplayName"
                      SelectionChanged="ProfileComboBox_SelectionChanged"/>

            <Button Content="切り替え" Click="SwitchProfile_Click" Margin="0,5,2,5" Padding="8,5" Background="#E0F0FF" FontWeight="Bold" ToolTip="選択したプロファイルに切り替える（再起動）"/>
            <Button Content="新規" Click="AddProfile_Click" Margin="0,5,2,5" Padding="8,5" ToolTip="新しいプロファイルを作成"/>
            <Button Content="名前変更" Click="RenameProfile_Click" Margin="0,5,2,5" Padding="8,5" ToolTip="選択中のプロファイル名を変更（アクティブ以外）"/>
            <Button Content="削除" Click="DeleteProfile_Click" Margin="0,5,5,5" Padding="8,5" Background="#FFEEEE" Foreground="Red" ToolTip="選択中のプロファイルを削除（アクティブ以外）"/>
        </WrapPanel>

        <Grid Grid.Row="1">
            <ItemsControl Grid.Row="1" Name="ColumnItemsControl"
                          dd:DragDrop.IsDragSource="True"
                          dd:DragDrop.IsDropTarget="True"
                          dd:DragDrop.UseDefaultDragAdorner="True"
                          dd:DragDrop.DropHandler="{Binding}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="1"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1,0,1,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Name="DragHandle" Background="#F0F0F0" Height="32">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Url}" Grid.Column="0" VerticalAlignment="Center" Margin="10,0" FontSize="12" FontWeight="Bold" Foreground="#555" TextTrimming="CharacterEllipsis"/>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,5,0">
                                        <Button Content="↻" Width="24" Height="24" Margin="2,0" ToolTip="更新" Click="ColumnManualRefresh_Click" Tag="{Binding}"/>
                                        <TextBlock Text="{Binding CountdownText, Mode=OneWay}" VerticalAlignment="Center" Margin="5,0,2,0" MinWidth="40" TextAlignment="Center" FontStyle="Italic" Foreground="#333"/>
                                        <CheckBox IsChecked="{Binding IsAutoRefreshEnabled}" ToolTip="自動更新" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                        <TextBlock Text="自動:" VerticalAlignment="Center" Margin="3,0"/>
                                        <TextBox Text="{Binding RefreshIntervalSeconds, UpdateSourceTrigger=PropertyChanged}" Width="40" Height="24" VerticalContentAlignment="Center" ToolTip="秒数" Margin="2,0"/>
                                        <Button Content="✖" Width="24" Height="24" Margin="5,0,0,0" FontWeight="Bold" Background="#CC000000" Foreground="White" BorderThickness="0" Click="DeleteColumn_Click" Tag="{Binding}"/>
                                    </StackPanel>
                                </Grid>
                                <wv2:WebView2 Grid.Row="1" Loaded="WebView_Loaded" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Grid Name="FocusViewGrid" Visibility="Collapsed" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Name="CloseFocusViewButton" Click="CloseFocusView_Click" Content="← カラム一覧に戻る" HorizontalAlignment="Left" Margin="10" Padding="10,5" FontWeight="Bold"/>
                <wv2:WebView2 Grid.Row="1" Name="FocusWebView" />
            </Grid>
        </Grid>
    </Grid>
</Window>