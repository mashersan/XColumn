<Window x:Class="XColumn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XColumn"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:dd="urn:gong-wpf-dragdrop"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:p="clr-namespace:XColumn.Properties"
        mc:Ignorable="d"
        x:Name="MainWin"
        Title="XColumn" Height="800" Width="1200"
        Loaded="Window_Loaded"
        WindowStartupLocation="Manual"
        PreviewMouseWheel="Window_PreviewMouseWheel"
        PreviewKeyDown="Window_PreviewKeyDown"
        Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">

    <Window.Resources>
        <local:ColumnDropHandler x:Key="ColumnDropHandler" />
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Menu Grid.Column="0" Background="Transparent" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Padding="0" Margin="0">
                <Menu.Resources>
                    <Style TargetType="MenuItem">
                        <Setter Property="Height" Value="26"/>
                        <Setter Property="MinHeight" Value="26"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Padding" Value="8,0"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Foreground" Value="{DynamicResource SystemControlPageTextBaseHighBrush}"/>
                    </Style>
                </Menu.Resources>

                <MenuItem Header="{x:Static p:Resources.Menu_File}">
                    <MenuItem Header="{x:Static p:Resources.Menu_NewColumn}">
                        <MenuItem Header="{x:Static p:Resources.Menu_AddHome}" Click="AddHome_Click"/>
                        <MenuItem Header="{x:Static p:Resources.Menu_AddUser}" Click="AddUser_Click"/>
                        <MenuItem Header="{x:Static p:Resources.Menu_AddNotify}" Click="AddNotify_Click"/>
                        <MenuItem Header="{x:Static p:Resources.Menu_AddTrend}" Click="AddTrend_Click"/>
                        <MenuItem Header="{x:Static p:Resources.Menu_AddGlobalTrend}" Click="AddGlobalTrend_Click"/>
                        <MenuItem Header="{x:Static p:Resources.Menu_AddSearch}" Click="AddSearch_Click"/>
                        <MenuItem Header="{x:Static p:Resources.Menu_AddList}" Click="AddList_Click"/>
                        <MenuItem Header="{x:Static p:Resources.Menu_AddListAuto}" Click="AddListAuto_Click"/>

                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="{x:Static p:Resources.Menu_Exit}" Click="Exit_Click"/>
                </MenuItem>

                <MenuItem Header="{x:Static p:Resources.Menu_Profile}" x:Name="MenuProfile" SubmenuOpened="MenuProfile_SubmenuOpened">
                    <MenuItem Header="{x:Static p:Resources.Menu_Profile_New}" Click="AddProfile_Click"/>
                    <Separator/>
                </MenuItem>

                <MenuItem Header="{x:Static p:Resources.Menu_Tools}">
                    <MenuItem Header="{x:Static p:Resources.Menu_Settings}" Click="OpenSettings_Click"/>
                    <MenuItem Header="{x:Static p:Resources.Menu_Extensions}" Click="ManageExtensions_Click"/>
                    <Separator/>
                    <MenuItem Header="{x:Static p:Resources.Menu_StopActiveTimer}" IsCheckable="True" IsChecked="{Binding StopTimerWhenActive, ElementName=MainWin}"/>
                </MenuItem>

                <MenuItem Header="{x:Static p:Resources.Menu_Help}">
                    <MenuItem Header="{x:Static p:Resources.Menu_DebugInfo}" Click="ExportDebugInfo_Click"/>
                    <Separator/>
                    <MenuItem Header="{x:Static p:Resources.Menu_About}" Click="About_Click"/>
                </MenuItem>
            </Menu>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,5,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0" ToolTip="{x:Static p:Resources.Tooltip_Volume}">
                    <TextBlock Text="{x:Static p:Resources.UI_Volume}" VerticalAlignment="Center" FontSize="11" Foreground="{DynamicResource SystemControlPageTextBaseHighBrush}" Margin="0,0,5,0"/>
                    <Slider Name="VolumeSlider" Width="80" Minimum="0" Maximum="100" Value="50" VerticalAlignment="Center" IsTabStop="False" TickFrequency="10" IsSnapToTickEnabled="True" ValueChanged="VolumeSlider_ValueChanged">
                        <Slider.LayoutTransform>
                            <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                        </Slider.LayoutTransform>
                    </Slider>
                </StackPanel>
                <Rectangle Width="1" Height="14" Margin="10,0" VerticalAlignment="Center" Fill="{DynamicResource SystemControlForegroundBaseLowBrush}"/>
                <StackPanel Name="StatusPanel" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0" Background="Transparent" Cursor="Hand" MouseLeftButtonUp="StatusPanel_MouseLeftButtonUp" MouseRightButtonUp="StatusPanel_MouseRightButtonUp" ToolTip="{x:Static p:Resources.Tooltip_ServerStatus}">
                    <Ellipse Name="StatusIndicator" Width="10" Height="10" Fill="Gray" Stroke="#999" StrokeThickness="1" Margin="0,1,5,0"/>
                    <TextBlock Name="StatusText" Text="{x:Static p:Resources.UI_Status_Waiting}" FontSize="11" VerticalAlignment="Center" Foreground="{DynamicResource SystemControlPageTextBaseHighBrush}"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <ComboBox Name="ProfileComboBox" Visibility="Collapsed" SelectionChanged="ProfileComboBox_SelectionChanged"/>
        <Grid Grid.Row="1">
            <ItemsControl Grid.Row="1" Name="ColumnItemsControl" 
                          dd:DragDrop.IsDragSource="True" 
                          dd:DragDrop.IsDropTarget="True" 
                          dd:DragDrop.UseDefaultDragAdorner="True" 
                          dd:DragDrop.DropHandler="{StaticResource ColumnDropHandler}" 
                          dd:DragDrop.DropTargetAdornerBrush="#1DA1F2">
                <ItemsControl.Style>
                    <Style TargetType="ItemsControl">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ItemsControl">
                                    <local:ExtendedScrollViewer x:Name="MainScrollViewer" Focusable="False" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" PanningMode="HorizontalOnly">
                                        <ItemsPresenter />
                                    </local:ExtendedScrollViewer>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="ItemsPanel">
                            <Setter.Value>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding UseUniformGrid, ElementName=MainWin}" Value="True">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ItemsControl">
                                            <ItemsPresenter />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="ItemsPanel">
                                    <Setter.Value>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Rows="1"/>
                                        </ItemsPanelTemplate>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ItemsControl.Style>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" BorderThickness="1,0,1,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Width" Value="{Binding Width}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding UseUniformGrid, ElementName=MainWin}" Value="True">
                                            <Setter Property="Width" Value="NaN"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <Grid.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="{x:Static p:Resources.Ctx_DeleteColumn}" Click="DeleteColumn_Click" Tag="{Binding}"/>
                                    </ContextMenu>
                                </Grid.ContextMenu>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Name="DragHandle" MouseLeftButtonDown="ColumnHeader_MouseLeftButtonDown">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Background" Value="{DynamicResource SystemControlPageBackgroundChromeMediumLowBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListAccentLowBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto" MinHeight="32"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" MinHeight="24" Visibility="{Binding ShowColumnUrl, ElementName=MainWin, Converter={StaticResource BoolToVis}}">
                                        <TextBlock Text="{Binding Url}" 
                                                   VerticalAlignment="Center" HorizontalAlignment="Left" 
                                                   Margin="10,4,5,2" 
                                                   FontSize="12" FontWeight="Bold" 
                                                   Foreground="{DynamicResource SystemControlPageTextBaseHighBrush}" 
                                                   TextTrimming="CharacterEllipsis" 
                                                   ToolTip="{Binding Url}"/>
                                    </Grid>

                                    <Grid Grid.Row="1" Margin="0,0,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0" 
                                                Content="←" 
                                                Width="32" 
                                                Height="30" 
                                                Margin="2,0" 
                                                Padding="0,0,0,2" 
                                                ToolTip="{x:Static p:Resources.Tooltip_GoBack}" 
                                                Click="ColumnGoBack_Click" Tag="{Binding}"/>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <TextBlock VerticalAlignment="Center" Margin="0,0,4,0" FontSize="12">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value=""/>
                                                        <Style.Triggers>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding IsAutoRefreshEnabled}" Value="True"/>
                                                                    <Condition Binding="{Binding KeepUnreadPosition}" Value="True"/>
                                                                    <Condition Binding="{Binding IsAtTop}" Value="True"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="Text" Value="🔄"/>
                                                                <Setter Property="Foreground" Value="#1DA1F2"/>
                                                                <Setter Property="ToolTip" Value="自動更新: 待機中"/>
                                                            </MultiDataTrigger>
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding IsAutoRefreshEnabled}" Value="True"/>
                                                                    <Condition Binding="{Binding KeepUnreadPosition}" Value="True"/>
                                                                    <Condition Binding="{Binding IsAtTop}" Value="False"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="Text" Value="⏸"/>
                                                                <Setter Property="Foreground" Value="Orange"/>
                                                                <Setter Property="ToolTip" Value="自動更新: 保留中 (スクロール中)"/>
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{Binding CountdownText, Mode=OneWay}" 
                                                       VerticalAlignment="Center" 
                                                       Margin="0,0,6,0" 
                                                       MinWidth="30"
                                                       TextAlignment="Right" 
                                                       FontStyle="Italic" 
                                                       FontSize="11" 
                                                       Foreground="{DynamicResource SystemControlPageTextBaseHighBrush}"
                                                       IsHitTestVisible="False"/>

                                            <Button Content="↻" 
                                                    Width="30" 
                                                    Height="30" 
                                                    Margin="0,0,2,0" 
                                                    Padding="0,0,0,2" 
                                                    ToolTip="{x:Static p:Resources.Tooltip_Refresh}" 
                                                    Click="ColumnManualRefresh_Click" Tag="{Binding}"/>

                                            <Button Content="🧹" 
                                                    Width="30" 
                                                    Height="30" 
                                                    Margin="0,0,2,0" 
                                                    Padding="0,0,0,2" 
                                                    ToolTip="Clear Memory" 
                                                    Click="ColumnClear_Click" 
                                                    Tag="{Binding}"/>

                                            <Button Content="⚙" 
                                                    Width="30" 
                                                    Height="30" 
                                                    Margin="0,0,2,0" 
                                                    Padding="0,0,0,2" 
                                                    ToolTip="{x:Static p:Resources.Menu_Settings}" 
                                                    Click="ColumnSettings_Click">
                                                <Button.ContextMenu>
                                                    <ContextMenu>
                                                        <MenuItem Header="{x:Static p:Resources.Tooltip_HideRT}" IsCheckable="True" IsChecked="{Binding IsRetweetHidden}" Click="RetweetHidden_Click" Tag="{Binding}"/>
                                                        <MenuItem Header="{x:Static p:Resources.Tooltip_HideReply}" IsCheckable="True" IsChecked="{Binding IsReplyHidden}" Click="ReplyHidden_Click" Tag="{Binding}"/>

                                                        <Separator/>

                                                        <MenuItem StaysOpenOnClick="True">
                                                            <MenuItem.Header>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Text="幅 (px)" VerticalAlignment="Center"/>
                                                                    <TextBox Text="{Binding Width, UpdateSourceTrigger=LostFocus}" 
                                                                        Width="50" Margin="10,0,0,0" Padding="2"
                                                                        VerticalContentAlignment="Center"
                                                                        KeyDown="ColumnSetting_KeyDown"/>
                                                                </StackPanel>
                                                            </MenuItem.Header>
                                                        </MenuItem>

                                                        <MenuItem Header="{x:Static p:Resources.UI_Auto}" IsCheckable="True" IsChecked="{Binding IsAutoRefreshEnabled}"/>
                                                        <MenuItem StaysOpenOnClick="True">
                                                            <MenuItem.Header>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Text="{x:Static p:Resources.Tooltip_RefreshInterval}" VerticalAlignment="Center"/>
                                                                    <TextBox Text="{Binding RefreshIntervalSeconds, UpdateSourceTrigger=LostFocus}" 
                                                                             Width="50" Margin="10,0,0,0" Padding="2"
                                                                             VerticalContentAlignment="Center"
                                                                             KeyDown="ColumnSetting_KeyDown"/>
                                                                </StackPanel>
                                                            </MenuItem.Header>
                                                        </MenuItem>
                                                        <MenuItem StaysOpenOnClick="True">
                                                            <MenuItem.Header>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Text="Zoom:" VerticalAlignment="Center"/>
                                                                    <TextBox Text="{Binding ZoomPercentage, UpdateSourceTrigger=LostFocus}" 
                                                                        Width="50" Margin="10,0,0,0" Padding="2"
                                                                        VerticalContentAlignment="Center"
                                                                        KeyDown="ColumnSetting_KeyDown"/>
                                                                </StackPanel>
                                                            </MenuItem.Header>
                                                        </MenuItem>
                                                    </ContextMenu>
                                                </Button.ContextMenu>
                                            </Button>

                                            <Button Content="✖" Width="30" Height="30" Margin="0,0,2,0" Padding="0,0,0,2" FontWeight="Bold" Background="Transparent" Foreground="#FF5555" BorderThickness="0" Click="DeleteColumn_Click" Tag="{Binding}"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <wv2:WebView2 Grid.Row="1" Loaded="WebView_Loaded" GotFocus="WebView_GotFocus" dd:DragDrop.DragSourceIgnore="True"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Grid Name="FocusViewGrid" Visibility="Collapsed" Grid.Row="0" Grid.RowSpan="2" Background="#80000000" MouseDown="FocusViewGrid_MouseDown">
                <Border Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}" 
            Margin="50" CornerRadius="8"
            BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" BorderThickness="1"
            Effect="{DynamicResource DefaultShadow}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Button Grid.Row="0" Name="CloseFocusViewButton" Click="CloseFocusView_Click" 
                    Content="{x:Static p:Resources.UI_BackToColumns}" 
                    HorizontalAlignment="Left" Margin="10" Padding="10,5" FontWeight="Bold"/>

                        <wv2:WebView2 Grid.Row="1" Name="FocusWebView" />
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>